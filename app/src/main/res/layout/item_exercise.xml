<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dimen_5"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dimen_5"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="@dimen/dimen_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_exercise"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/slow_gray"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_image_empty" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_3"
            android:gravity="center"
            android:textAppearance="@dimen/dimen_3"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h2"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_exercise"
            tools:text="Supino" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_note_exercise"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginBottom="@dimen/dimen_2"
            android:gravity="top"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_exercise"
            tools:text="Fazer 4 repetições, cada uma em um minuto. O exercicio deve ser feito lento e o descanso é de tambem um minuto" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>